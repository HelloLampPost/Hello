<div class="col-6">
    <form class="contact-form" action="/contact" method="post">
      <fieldset>
        <label for="name">Name:</label>
        <input type="text" name="name" placeholder="Tom Wicks">
      </fieldset>
      <fieldset>
        <label for="email">email address:</label>
        <input type="email" name="email" placeholder="hello@lamppost.com">
      </fieldset>
      <label for="subject">Subject:</label>
      <select name="subject" form="subject-form">
        <option value="I am interested in Hello Lamp Post for my city">I am interested in Hello Lamp Post for my city</option>
        <option value="I have a question about Hello Lamp Post">I have a question about Hello Lamp Post</option>
        <option value="I am interested in collaborating with Hello Lamp Post">I am interested in collaborating with Hello Lamp Post</option>
        <option value="Other">Other</option>
      </select>
      <label for="message">Your message:</label>
      <textarea name="message" cols='30' placeholder="Hi Hello Lamp Post..." rows="10"></textarea><br>
      <input type="submit" class="btn" value="Submit">
    </form>
</div>
